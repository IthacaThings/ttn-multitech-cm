/* Generated via Ansible */
{
/* Settings defined in global_conf will be overwritten by those in local_conf */
    "gateway_conf": {
        /* gateway_ID is based on unique hardware ID, do not edit */
        "gateway_ID": "{{ ansible_local.lora.eui }}",
        /* Email of gateway operator, max 40 chars*/
        "contact_email": "{{ contact_email }}", 
        /* Public description of this device, max 64 chars */
        "description": "{{ description }}",
        /* Enter VALID GPS coordinates below before enabling fake GPS */
{% if latitude and longitude %}	   	       	   	       
        "gps": true,
        "fake_gps": true,
        "ref_latitude": {{ latitude }},
        "ref_longitude": {{ longitude }},
{% if altitude %}
        "ref_altitude": {{ altitude }}
{% else %}
        "ref_altitude": -1
{% endif %}
{% else %}
        "gps": false,
        "fake_gps": false
{% endif %}
    }
}
